{
  "productName": "steampunk-game",
  "appId": "com.nerdgroup.steampunkgame",
  "directories": {
    "buildResources": "buildResources",
    "output": "bin"
  },
  "files": [ "dist/", "node_modules/", "package.json" ],
  "extraResources": [
    {
      "from": "../game/dist",
      "to": "game",
      "filter": [ "**/*" ]
    }
  ],
  "mac": {
    "target": [ "dmg", "zip" ],
    "artifactName": "${productName}-${version}-${os}.${ext}"
  },
  "win": {
    "target": [ "nsis", "zip" ],
    "artifactName": "${productName}-${version}-${os}.${ext}"
  },
  "linux": {
    "target": [ "AppImage" ],
    "artifactName": "${productName}-${version}-${os}.${ext}"
  },
  "dmg": {
    "title": "${productName}-${version}",
    "contents": [
      {
        "x": 300,
        "y": 360
      },
      {
        "x": 490,
        "y": 360,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}