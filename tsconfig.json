{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "Bundler",
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "allowJs": true,
        "paths": {
            "@helpers/*": [ "helpers/*" ],
            "@styles/*": [ "styles/*" ],
            "@logic/*": [ "logic/*" ]
        }
    },
    "include": [ "./src/**/*.ts" ],
    "exclude": [ "node_modules" ]
}